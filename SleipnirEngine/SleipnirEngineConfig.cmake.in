set(PREFIX ${CMAKE_CURRENT_LIST_DIR}/../..)
set(SLEIPNIR_LINK_LIBRARIES
    Pegasus::Physics
    Unicorn::Render
    Tulpar::Audio
    Mule::Utilities
)

include(CMakeFindDependencyMacro)

find_dependency(MuleUtilities REQUIRED)
find_dependency(PegasusPhysics REQUIRED)
find_dependency(UnicornRender REQUIRED)
find_dependency(TulparAudio REQUIRED)

# Describe imported library
add_library(@PROJECT_NAME@ SHARED IMPORTED)
set_target_properties(@PROJECT_NAME@ PROPERTIES
    IMPORTED_LOCATION "${PREFIX}/@SLEIPNIR_INSTALL_LIBRARY_DIR@/$<TARGET_FILE_NAME:@PROJECT_NAME@>"
    INTERFACE_INCLUDE_DIRECTORIES "${PREFIX}/@SLEIPNIR_INSTALL_INCLUDE_DIR@"
    INTERFACE_LINK_LIBRARIES "${SLEIPNIR_LINK_LIBRARIES}"
)

# Create aliases to imported library
add_library(@PROJECT_NAME@Proxy INTERFACE)
add_library(@PROJECT_NAME@::@PROJECT_NAME@ ALIAS @PROJECT_NAME@Proxy)
add_library(@SLEIPNIR_LIB_ALIAS@ ALIAS @PROJECT_NAME@Proxy)

target_link_libraries(@PROJECT_NAME@Proxy
    INTERFACE
        @PROJECT_NAME@
        ${SLEIPNIR_LINK_LIBRARIES}
)

target_include_directories(@PROJECT_NAME@Proxy
    SYSTEM INTERFACE
        ${PREFIX}/@SLEIPNIR_INSTALL_INCLUDE_DIR@
)
